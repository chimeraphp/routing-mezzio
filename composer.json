{
    "name": "chimera/routing-mezzio",
    "description": "Laminas Mezzio implementation for chimera/routing",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lu√≠s Cobucci",
            "email": "lcobucci@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "chimera/foundation": "^1.0.x-dev",
        "chimera/routing": "^1.0.x-dev",
        "laminas/laminas-diactoros": "^2.19",
        "mezzio/mezzio": "^3.11",
        "mezzio/mezzio-fastroute": "^3.6",
        "mezzio/mezzio-helpers": "^5.9",
        "mezzio/mezzio-router": "^3.8",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "infection/infection": "^0.26",
        "lcobucci/coding-standard": "^9.0",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "replace": {
        "chimera/routing-expressive": "*"
    },
    "provide": {
        "chimera/routing-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Chimera\\Routing\\Mezzio\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chimera\\Routing\\Mezzio\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    }
}
